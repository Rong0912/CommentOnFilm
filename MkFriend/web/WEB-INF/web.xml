<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"  metadata-complete="false">
    <!--metadata-complete="true"  不支持注解-->


    <request-character-encoding>UTF-8</request-character-encoding>
    <response-character-encoding>UTF-8</response-character-encoding>

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Register.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register/RegisterServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Register.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Register/LoginServlet</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>SQLServlet</servlet-name>
        <servlet-class>Register.SQLServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SQLServlet</servlet-name>
        <url-pattern>/Register/SQLServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>Register.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/Register/DeleteServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>Register.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/Register/AddServlet</url-pattern>
    </servlet-mapping>
    

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>Register.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/Register/UpdateServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>Register.helpUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>/Register/helpUploadServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ModifyPassServlet</servlet-name>
        <servlet-class>Register.helpModifyPasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyPassServlet</servlet-name>
        <url-pattern>/Register/helpModifyPasswordServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>helpExitLoginServlet</servlet-name>
        <servlet-class>Register.helpExitLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helpExitLoginServlet</servlet-name>
        <url-pattern>/Register/helpExitLoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>helpModifyMessServlet</servlet-name>
        <servlet-class>Register.helpModifyMessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helpModifyMessServlet</servlet-name>
        <url-pattern>/Register/helpModifyMessServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>helpShowMemberServlet</servlet-name>
        <servlet-class>helpShowMemberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helpShowMemberServlet</servlet-name>
        <url-pattern>/helpShowMemberServlet</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/upload.jsp</url-pattern>
        <url-pattern>/choiceLookType.jsp</url-pattern>
        <url-pattern>/inputModifyMess.jsp</url-pattern>
        <url-pattern>/modifyPassword.jsp</url-pattern>
    </filter-mapping>


</web-app>